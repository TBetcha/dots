#
# # create desktop and follow focus - uses jq for parsing json (brew install jq)
# ctrl + alt - t : yabai -m space --create && \
#                 index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
#                 yabai -m space --focus "${index}" && \
#                 sketchybar -m --trigger space_change
#
# # create desktop, move window and follow focus - uses jq for parsing json (brew install jq)
ctrl + shift - t : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}" && \
                  sketchybar -m --trigger space_change

# -- Modifying Window Size --

# maximize a window
shift + alt + cmd + ctrl - m : yabai -m window --toggle zoom-fullscreen
shift + alt  - m : yabai -m window --toggle native-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt + cmd + ctrl - e : yabai -m space --balance

# Resize windows
shift + alt + cmd + ctrl - left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
shift + alt + cmd + ctrl - down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
shift + alt + cmd + ctrl - up : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
shift + alt + cmd + ctrl - right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# -- Moving Windows Around --

# swap windows
shift + alt + cmd + ctrl - j : yabai -m window --swap south
shift + alt + cmd + ctrl - k : yabai -m window --swap north
shift + alt + cmd + ctrl - h : yabai -m window --swap west
shift + alt + cmd + ctrl - l : yabai -m window --swap east


# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - left : yabai -m window --display west; yabai -m display --focus west;
shift + alt - right : yabai -m window --display east; yabai -m display --focus east;


# fast focus desktop - wait on sonoma
alt - left : (yabai -m space --focus prev || yabai -m space --focus last) || skhd -k "cmd - left"
alt - right : (yabai -m space --focus next || yabai -m space --focus first) || skhd -k "cmd - right"


# move window to prev and next space
# shift + alt + cmd + ctrl - p : yabai -m window --space prev && yabai -m space --focus prev
# shift + alt + cmd + ctrl - n : yabai -m window --space next && yabai -m space --focus next

# THIS IS A HACK UNTIL SONOMA IS FULLY SUPPORTED - WHEN CAN REPLACE WITH ^^^^^^
shift + alt + cmd + ctrl - p : yabai -m window --space prev && skhd -k "cmd - left"
shift + alt + cmd + ctrl - n : yabai -m window --space next && skhd -k "cmd - right"

